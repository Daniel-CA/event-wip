<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="wiz_send_email_to_registrations_form">
            <field name="name">wiz.send.email.to.registrations.form</field>
            <field name="model">wiz.send.email.to.registrations</field>
            <field name="arch" type="xml">
                <form string="Send email to event registrations" version="7.0">
                    <group>
                        <separator string="Email body" colspan="4" />
                        <field name="body" required="True" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="button_send_email" type="object"
                            string="Send email" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
