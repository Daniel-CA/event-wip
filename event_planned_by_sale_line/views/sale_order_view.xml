<openerp>
    <data>
        <record id="view_order_form_inh_rockbotic" model="ir.ui.view" >
            <field name="name">view.order.form.inh.rockbotic</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_order_line_performance.view_order_form_inh_line_performance"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']//form//field[@name='performance']" position="attributes">
                    <attribute name="string">Duration</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']//tree//field[@name='performance']" position="attributes">
                    <attribute name="string">Duration</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_order_form2_inh_rockbotic" model="ir.ui.view" >
            <field name="name">view.order.form2.inh.rockbotic</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="product_category" />
                    <field name="payer" />
                </field>
            </field>
        </record>
        <record id="view_order_form3_inh_rockbotic" model="ir.ui.view" >
            <field name="name">view.order.form3.inh.rockbotic</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_order_create_event.view_order_form_inh_sale_create_event"/>
            <field name="arch" type="xml">
                <field name="order_line" position="attributes">
                    <attribute name="context">{'default_product_category': product_category,'default_project_by_task': project_by_task, 'default_start_date': project_start_date, 'default_end_date': project_end_date}</attribute>
                </field>
            </field>
        </record>
        <record id="view_order_tree_inh_rockbotic" model="ir.ui.view" >
            <field name="name">view_order_tree.inh.rockbotic</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="product_category" />
                    <field name="payer" />
                </field>
            </field>
        </record>
        <record id="view_quotation_tree_inh_rockbotic" model="ir.ui.view" >
            <field name="name">view.quotation.tree.inh.rockbotic</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="product_category" />
                    <field name="payer" />
                </field>
            </field>
        </record>
        <record id="view_sales_order_filter_inh_rockbotic" model="ir.ui.view" >
            <field name="name">view.sales.order.filter.inh.rockbotic</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="product_category" />
                    <field name="payer" />
                </field>
                <filter string="Order Month" position="after">
                    <filter string="Product category" domain="[]" context="{'group_by':'product_category'}"/>
                    <filter string="Payer" domain="[]" context="{'group_by':'payer'}"/>
                </filter>
            </field>
        </record>
        <record id="view_order_form4_inh_rockbotic" model="ir.ui.view" >
            <field name="name">view.order.form4.inh.rockbotic</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form//field[@name='product_id']" position="before">
                    <field name="product_category" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="before">
                    <field name="product_category" invisible="1"/>
                </xpath>
            </field>
        </record>
        <record id="sale_order_form_quote_inh_rockbotic" model="ir.ui.view" >
            <field name="name">sale.order.form.quote.inh.rockbotic</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="website_quote.sale_order_form_quote"/>
            <field name="arch" type="xml">
                <field name="template_id"  position="attributes">
                    <attribute name="on_change">onchange_template_id(template_id, partner_id, fiscal_position, product_category, context)</attribute>
                </field>
            </field>
        </record>
        <record id="view_order_form5_inh_rockbotic" model="ir.ui.view" >
            <field name="name">view.order.form5.inh.rockbotic</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_product_variants.sale_order_extended_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/form//field[@name='product_tmpl_id']" position="attributes">
                    <attribute name="domain">[('categ_id', '=', product_category)]</attribute>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree//field[@name='product_tmpl_id']" position="attributes">
                    <attribute name="domain">[('categ_id', '=', product_category)]</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
